$("#post-<%= @post.slug %>-votes").html("<%= @post.vote_tally %>");

<% if @vote.valid? %>
  $("#flash").html("<%=j render partial: 'shared/vote_success' %>");
<% else %>
  $("#flash").html("<%=j render partial: 'shared/vote_error' %>");
  $("html, body").animate({ scrollTop: 0 }, "fast");
<% end %>